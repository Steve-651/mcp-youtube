{
  "name": "mcp-server",
  "version": "1.0.0",
  "description": "A TypeScript MCP server implementation.",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "cleanup": "powershell -ExecutionPolicy Bypass -File cleanup.ps1",
    "build": "npm run cleanup && npx tsc",
    "start": "npm run build && node dist/index.js",
    "debug": "npm run build && node --inspect-brk dist/index.js",
    "inspect": "npm run cleanup && npx @modelcontextprotocol/inspector node dist/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.16.0",
    "youtubei.js": "^15.0.1",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.16.2",
    "@types/node": "^16.11.7",
    "typescript": "^4.5.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/mcp-server.git"
  },
  "author": "Your Name",
  "license": "MIT"
}