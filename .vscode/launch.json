{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug MCP Server with Inspector",
            "runtimeExecutable": "npx",
            "runtimeArgs": ["@modelcontextprotocol/inspector", "node", "dist/server.js"],
            "preLaunchTask": "build",
            "cwd": "${workspaceFolder}",
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development",
                "MCP_INSPECTOR": "true",
                "ENABLE_SOURCEMAPS": "true"
            }
        }
    ]
}