{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug MCP Server with Inspector",
            "runtimeExecutable": "npx",
            "runtimeArgs": ["@modelcontextprotocol/inspector", "node", "--inspect-brk=9229", "--enable-source-maps", "dist/server.js"],
            "preLaunchTask": "build",
            "cwd": "${workspaceFolder}",
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "console": "externalTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run MCP Server with Inspector",
            "runtimeExecutable": "npx",
            "runtimeArgs": ["@modelcontextprotocol/inspector", "node", "dist/server.js"],
            "preLaunchTask": "build",
            "cwd": "${workspaceFolder}",
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "console": "externalTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}